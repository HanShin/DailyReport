@{
    ViewBag.Title = "Mto off";
}

<style>
    .k-grid-header-wrap th {
        font-size: x-small !important;
    }
    .k-grid tr td {
    border-bottom: 1px solid #DBDBDB;
    }

</style>

<div class="col-xs-10 col-md-10">
        @(Html.Kendo().Grid<DailyReportOracleDB.Dal.DR_MMODEL_MTOOFF>()
            .Name("MtoOff")
            .HtmlAttributes(new { style = "height : 880px; border-width:1px;border-style:solid; border-color:darkgray;"})
            .Columns(column =>
            {
                column.Bound(p => p.ITEMNAME);
                column.Bound(p => p.MTO);
                column.Bound(p => p.PIPERUN);
            }
            )
            .Pageable()
            .Sortable()
            .Scrollable()
            .DataSource(dataSource => dataSource
                .Ajax()
                .Read("Mto_Read","Grid")
                .PageSize(25)
            )
            
        )
</div>
